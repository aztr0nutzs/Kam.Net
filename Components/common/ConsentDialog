              className="flex-1 bg-red-500/20 hover:bg-red-500/30 text-red-400 border-2 border-red-400/50 hover:border-red-400 transition-all font-mono"
            >
              <X className="w-4 h-4 mr-2" />
              DECLINE
            </Button>
            <Button
              onClick={onAccept}
              className="flex-1 bg-green-500/20 hover:bg-green-500/30 text-green-400 border-2 border-green-400/50 hover:border-green-400 transition-all font-mono"
            >
              <Check className="w-4 h-4 mr-2" />
              ACCEPT
            </Button>
          </div>

          {/* Corner Brackets */}
          <div className="absolute top-2 left-2 w-6 h-6 border-l-2 border-t-2 border-yellow-400 opacity-50 pointer-events-none" />
          <div className="absolute top-2 right-2 w-6 h-6 border-r-2 border-t-2 border-yellow-400 opacity-50 pointer-events-none" />
          <div className="absolute bottom-2 left-2 w-6 h-6 border-l-2 border-b-2 border-yellow-400 opacity-50 pointer-events-none" />
          <div className="absolute bottom-2 right-2 w-6 h-6 border-r-2 border-b-2 border-yellow-400 opacity-50 pointer-events-none" />
        </motion.div>
